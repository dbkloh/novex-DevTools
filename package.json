{
  "name": "@novex/devtools",
  "version": "0.1.4",
  "description": "Centralized DevTools for Next.js apps (route factories, core fs helpers, theme, auto-scaffold).",
  "type": "module",
  "license": "MIT",
  "repository": { "type": "git", "url": "git+https://github.com/dbkloh/novex-DevTools.git" },
  "bugs": { "url": "https://github.com/dbkloh/novex-DevTools/issues" },
  "homepage": "https://github.com/dbkloh/novex-DevTools#readme",
  "main": "./index.js",
  "scripts": {
    "postinstall": "node ./scripts/postinstall.mjs || echo \"[novex-devtools] postinstall skipped\""
  },
  "exports": {
    ".": "./index.js",
    "./adapters/next/dev-docs": "./adapters/next/dev-docs.js",
    "./adapters/next/export-code": "./adapters/next/export-code.js",
    "./adapters/next/export-docs": "./adapters/next/export-docs.js",
    "./adapters/next/technical-changelog": "./adapters/next/technical-changelog.js",
    "./adapters/next/summarize-changelog": "./adapters/next/summarize-changelog.js",
    "./theme.css": "./theme.css"
  },
  "files": [
    "adapters",
    "core",
    "theme.css",
    "index.js",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "keywords": ["nextjs","devtools","export","docs","changelog","scaffold"],
  "dependencies": {
    "jszip": "^3.10.1",
    "semver": "^7.6.3",
    "zod": "^3.23.8"
  },
  "engines": { "node": ">=18.17" },
  "sideEffects": ["./theme.css"]
}
